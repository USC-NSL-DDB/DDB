    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'ddb'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ddb",
                    "--package=ddb"
                ],
                "filter": {
                    "name": "ddb",
                    "kind": "bin"
                }
            },
            "args": [
                "${workspaceFolder}/core/configs/dbg_auto_discovery.yaml",
                "--console-log", 
                "--console-level",
                "debug"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'ddb'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=ddb",
                    "--package=ddb"
                ],
                "filter": {
                    "name": "ddb",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
    ]
}