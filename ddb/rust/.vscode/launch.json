    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'ddb'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ddb",
                    "--package=ddb"
                ],
                "filter": {
                    "name": "ddb",
                    "kind": "bin"
                }
            },
            "args": [
                "${workspaceFolder}/core/configs/dbg_auto_discovery.yaml",
                "--console-log", 
                "--console-level",
                "debug"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'ddb'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=ddb",
                    "--package=ddb"
                ],
                "filter": {
                    "name": "ddb",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Attach to GDB Extentsion Script",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5800
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/core/assets/gdb_ext",
                    "remoteRoot": "${workspaceFolder}/core/assets/gdb_ext"
                }
            ],
            "justMyCode": true,
            "presentation": {
                "hidden": false,
                "group": "Python",
                "order": 1
            }
        }
    ]
}