{
  "name": "ddb",
  "displayName": "Distributed Debugger",
  "version": "0.52.0",
  "publisher": "ms-vscode",
  "description": "Debug Adapter for a distributed system debugger.",
  "author": {
    "name": "USC NSL"
  },
  "license": "MIT",
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.66.0"
  },
  "icon": "images/mock-debug-icon.png",
  "categories": [
    "Debuggers"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/vscode-mock-debug.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/vscode-mock-debug/issues"
  },
  "scripts": {
    "compile": "./node_modules/typescript/bin/tsc -p ./",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --tsconfig=./tsconfig.json --external:vscode --format=cjs --platform=node --outfile=dist/extension.js",
    "watch": "npm run -S esbuild-base -- --sourcemap --sources-content=false --watch",
    "esbuild-web": "esbuild ./src/web-extension.ts --bundle --tsconfig=./tsconfig.json --external:vscode --format=cjs --platform=browser --outfile=dist/web-extension.js",
    "watch-web": "npm run -S esbuild-web -- --sourcemap --sources-content=false --watch",
    "build": "npm run -S esbuild-base -- --sourcemap --sources-content=false && npm run -S esbuild-web -- --sourcemap --sources-content=false",
    "package": "vsce package",
    "publish": "vsce publish",
    "publish-pre-release": "vsce publish --pre-release",
    "vscode:prepublish": "rimraf dist && npm run -S esbuild-base -- --minify && npm run -S esbuild-web -- --minify",
    "test": "npm run typecheck"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^14.18.63",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@vscode/debugadapter": "^1.56.0",
    "@vscode/debugadapter-testsupport": "^1.56.0",
    "await-notify": "^1.0.1",
    "base64-js": "^1.5.1",
    "esbuild": "^0.14.29",
    "eslint": "^8.12.0",
    "events": "^3.3.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "path-browserify": "^1.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3",
    "url": "^0.11.0",
    "vsce": "^2.7.0"
  },
  "main": "./dist/extension.js",
  "browser": "./dist/web-extension.js",
  "activationEvents": [
    "onDebugResolve:mock",
    "onDebugDynamicConfigurations:mock",
    "onCommand:extension.ddb.getProgramName",
    "onCommand:extension.ddb.getDDBConfigFile"
  ],
  "workspaceTrust": {
    "request": "never"
  },
  "contributes": {
    "menus": {},
    "commands": [],
    "breakpoints": [
      {
        "language": "c"
      },
      {
        "language": "cpp"
      },
      {
        "language": "c++"
      }
    ],
    "debuggers": [
      {
        "type": "ddb",
        "languages": [
          "c",
          "cpp"
        ],
        "label": "Distributed Debugger (DDB)",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "configFile"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a text file.",
                "default": "${command:AskForProgramName}"
              },
              "configFile": {
                "type": "string",
                "description": "Absolute path to a yaml config file.",
                "default": "${command:AskForDDBConfigFile}"
              }
            }
          },
          "attach": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to the program file.",
                "default": "${command:AskForProgramName}"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "ddb",
            "request": "launch",
            "name": "Launch(DDB)",
            "program": "${command:AskForProgramName}",
            "configFile": "${command:AskForDDBConfigFile}"
          }
        ],
        "configurationSnippets": [
          {
            "label": "DDB: Launch a program",
            "description": "A new configuration for 'debugging'",
            "body": {
              "type": "ddb",
              "request": "launch",
              "name": "Launch(DDB)",
              "program": "^\"\\${command:AskForProgramName}\"",
              "configFile": "^\"\\${command:AskForDDBConfigFile}\""
            }
          }
        ],
        "variables": {
          "AskForProgramName": "extension.ddb.getProgramName",
          "AskForDDBConfigFile": "extension.ddb.getDDBConfigFile"
        }
      }
    ]
  },
  "dependencies": {
    "gdb-mi-parser": "^1.5.0",
    "iconv-lite": "^0.6.3",
    "vscode-debugadapter": "^1.51.0"
  }
}
