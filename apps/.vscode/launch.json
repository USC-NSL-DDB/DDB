// A launch configuration that compiles the extension and then opens it inside a new window
{
	"version": "0.2.0",
	"inputs": [
		{
			"id": "debugServerPort",
			"type": "pickString",
			"description": "Debug server port",
			"options": [
				"4711",
				"4712",
				"4713",
			],
			"default": "4711"
		}
	],
	"configurations": [
		{
			"type": "ddb",
			"request": "launch",
			"name": "[REDISRAFT] Attach DDB",
			"ddbpath": "${env:HOME}/.cargo/bin/ddb",
			"configFilePath": "${workspaceFolder}/.ddb/dbg_redisraft.yaml",
			// "debugger_args": [ "--console-log", "--console-level", "debug" ],
			"debugger_args": [
				"--console-log",
				"--console-level",
				"info"
			],
			"debugServer": "${input:debugServerPort}",
			"valuesFormatting": "prettyPrinters",
		},
		{
			"type": "ddb",
			"request": "launch",
			"name": "[ServiceWeaver] Attach DDB",
			"ddbpath": "/home/junzhouh/distributed_debugger/distributed-debugger/ddb/rust/target/release/ddb",
			"configFilePath": "${workspaceFolder}/.ddb/serviceweaver_dis.yml",
			"debugger_args": [
				"--console-log",
				"--console-level",
				"info",
				"--file-level",
				"trace"
			],
			"debugServer": "${input:debugServerPort}",
			"valuesFormatting": "prettyPrinters",
		},
		{
			"type": "ddb",
			"request": "launch",
			"name": "Attach DDB",
			"ddbpath": "${env:HOME}/.cargo/bin/ddb",
			"configFilePath": "${workspaceFolder}/.ddb/dbg_auto_discovery.yaml",
			"debugger_args": [
				"--console-log",
				"--console-level",
				"info",
				"--file-level",
				"debug"
			],
			"debugServer": "${input:debugServerPort}",
			"valuesFormatting": "prettyPrinters",
		},
	],
}