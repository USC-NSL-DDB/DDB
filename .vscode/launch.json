{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Test: multithread_print",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/py_testing/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "py_testing/configs/dbg_multithread_print.yaml"
            ],
        },
        {
            "name": "Test: serviceweaver kube",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/py_testing/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": true
        },
        {
            "name": "Test: multithread_print_multiserver",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/py_testing/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "py_testing/configs/dbg_multithread_print_multiserver.yaml"
            ],
        },
        {
            "name": "(gdb) multiprocess",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/multiprocess",
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "targetArchitecture": "x64",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable mi async",
                    "text": "-gdb-set mi-async on",
                    "ignoreFailures": true
                },
                {
                    "description": "Disable detach on fork",
                    "text": "set detach-on-fork off",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable target async",
                    "text": "set target-async on",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable non-stop mode",
                    "text": "set non-stop on",
                    "ignoreFailures": true
                },
            ],
            // "launchCompleteCommand": "exec-run"
            // "customLaunchSetupCommands": [
            //     {
            //         "text": "-exec-run",
            //         "description": "run in background mode",
            //         "ignoreFailures": true
            //     }
            // ]
        },
    ]
}